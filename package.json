{
  "name": "prompt-archiver",
  "version": "1.0.0",
  "description": "A desktop application for storing and organizing AI prompts with their outputs",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run react-dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "react-dev": "react-scripts start",
    "build": "react-scripts build",
    "electron-build": "electron-builder",
    "dist": "npm run build && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "keywords": [
    "electron",
    "react",
    "ai",
    "prompts",
    "archiver"
  ],
  "author": "Prompt Archiver Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.15",
    "@mui/material": "^5.14.15",
    "archiver": "^6.0.1",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  },
  "homepage": "./",
  "build": {
    "appId": "com.promptarchiver.app",
    "productName": "Prompt Archiver",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/main.js",
      "src/preload.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
